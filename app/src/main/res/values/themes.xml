<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Games" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Games.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- default -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/pine_green</item>
        <item name="colorSecondary">@color/sunset_orange</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/cyprus</item>
        <item name="android:navigationBarColor">@color/midnight</item>
        <item name="android:windowBackground">@drawable/img_background</item>
    </style>

    <style name="Theme.Games.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Games.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Games">
        <item name="colorPrimary">@color/sunset_orange</item>
        <item name="colorSecondary">@color/sunset_orange</item>
    </style>

    <style name="Games.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Games.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColorHint">@color/ship_cove</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/link_water</item>
        <item name="colorPrimary">@color/sunset_orange</item>
        <item name="colorSecondary">@color/sunset_orange</item>
    </style>

    <style name="Games.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/pine_green</item>
        <item name="colorPrimary">@color/sunset_orange</item>
        <item name="colorSecondary">@color/sunset_orange</item>
    </style>

    <style name="Games.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/sunset_orange</item>
    </style>

    <style name="Games.Checkbox">
        <item name="android:layout_marginTop">@dimen/auth_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/auth_layout_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Games.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pine_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Games.Detail">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Games.Detail.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/midnight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Games.Detail.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cello</item>
    </style>

</resources>